<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="border-bottom border-dark">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <%= link_to root_path do %>
          <%= image_tag '4S1A5371-1.jpg', size:'200x100', class:"navbar-brand" %>
        <% end %>
          <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>
              <p  class="mr-5">【ようこそ、<%= current_customer.last_name%><%=current_customer.first_name%>さん！】</p>
              <li><%=link_to"マイページ", customers_path, class:"btn btn-sm btn-outline-dark mr-2"%></li>
              <li><%=link_to"商品一覧", items_path, class:"btn btn-sm btn-outline-dark mr-2"%></li>
              <li><%=link_to"カート", cart_items_path, class:"btn btn-sm btn-outline-dark mr-2"%></li>
              <li><%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn btn-sm btn-outline-dark mr-2" %></li>
            <% elsif admin_signed_in? %>
              <li><%=link_to"商品一覧", admin_items_path, class:"btn btn-sm btn-outline-dark mr-2"%></li>
              <li><%=link_to"会員一覧", admin_customers_path, class:"btn btn-sm btn-outline-dark mr-2"%></li>
              <li><%=link_to"注文履歴一覧", admin_top_path, class:"btn btn-sm btn-outline-dark mr-2"%></li>
              <li><%=link_to"ジャンル一覧", admin_genres_path, class:"btn btn-sm btn-outline-dark mr-2"%></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"btn btn-sm btn-outline-dark mr-2" %></li>
            <% else %>
              <li><%= link_to "About", about_path, class:"btn btn-sm btn-outline-dark mr-2" %></li>
              <li><%=link_to"商品一覧", items_path, class:"btn btn-sm btn-outline-dark mr-2"%></li>
              <li><%= link_to "新規登録", new_customer_registration_path, class:"btn btn-sm btn-outline-dark mr-2" %></li>
              <li><%= link_to "ログイン", new_customer_session_path, class:"btn btn-sm btn-outline-dark mr-2" %></li>
            <% end %>
          </ul>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
    <footer class="footer mt-auto py-3 bg-light border-top border-dark">
      <div class="container">
        <div class="row">
          <p class="m-auto">CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>
</html>
