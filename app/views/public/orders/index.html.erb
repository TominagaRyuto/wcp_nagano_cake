<div class="container">
  <h1>注⽂履歴⼀覧</h1>
  <table class="table table-sm table-bordered">
    <thead class="thead-light">
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>注文詳細</th>
      </tr>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td class="align-middle"><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td class="align-middle"〒
            <%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td class="align-middle">
            <ul style="list-style: none;">
              <% order.order_details.each do |order_detail| %>
                <li><%= order_detail.item.name %></li>
              <% end %>
            </ul>
          </td>
          <td class="align-middle"><%= order.total_payment %>円</td>
          <td class="align-middle"><%= link_to "表示する", order_path(order), class:"btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </thead>
  </table>
</div>