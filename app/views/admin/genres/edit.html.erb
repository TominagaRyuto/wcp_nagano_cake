<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <% @genre.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="container">
  <h1 class="w-25 bg-light m-5 text-center">ジャンル編集</h1>
  <%= form_with model:@genre, url:"/admin/genres/#{@genre.id}", local:true do |f| %>
    <%= f.label 'ジャンル名' %>
    <%= f.text_field :name, class:"m-5" %>
    <%= f.submit '変更を保存', class:"btn btn-success" %>
  <% end %>
</div>