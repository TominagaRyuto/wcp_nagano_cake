<div class="container">
  <h1 class="w-25 text-center bg-light m-5">会員一覧</h1>
  <table class="table ">
    <thead>
      <tr class="table-secondary">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customers| %>
      <tr>
        <td><%= customers.id %></td>
        <td>
          <%= link_to admin_customer_path(customers.id) do %>
            <%= customers.last_name %>
            <%= customers.first_name %>
          <% end %>
        </td>
        <td><%= customers.email %></td>
        <% if customers.is_active %>
          <td class="text-success">有効</td>
        <% else %>
          <td class="text-secondary">退会</td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @customers %>
</div>