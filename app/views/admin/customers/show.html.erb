<div class="container">
  <h1 class="bg-light w-50 text-center m-5">
  <%= @customer.last_name %>
  <%= @customer.first_name %>
  さんの会員情報詳細
  </h1>
  <table class="table table-borderless">
    <tr>
      <td class="w-25">会員ID</td>
      <td class="w-25"><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <%= @customer.last_name_kana%>
        <%=@customer.first_name_kana%>
      </td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%=@customer.postal_code%></td>
    </tr>
    <tr>
      <td>住所</td>
      <td colspan="2"><%=@customer.address%></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%=@customer.telephone_number%></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%=@customer.email%></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <% if @customer.is_active %>
        <td class="text-success">有効</td>
      <% else %>
        <td class="text-secondary">退会</td>
      <% end %>
    </tr>
    <tr>
      <td></td>
      <td><%=link_to '編集する', edit_admin_customer_path(@customer.id), class:"btn btn-success"%></td>
      <td><%=link_to'注文履歴一覧を見る', admin_top_path(id: @customer.id, order_sort: 0), class:"btn btn-primary" %></td>
    </tr>
  </table>
</div>