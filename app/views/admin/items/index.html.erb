<h1>商品⼀覧</h1>
<table>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
  </tr>

  <% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= item.genre.name %></td>
  </tr>
  <% end %>
  <%= paginate @items %>
</table>