<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <% @item.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<h1 class="bg-light w-25 text-center m-5">商品新規登録</h1>
<div class="container">
  <div class="row justify-content-center">
    <%= form_with model: @item, url:'/admin/items', local:true do |f| %>
      <div class="form-group">
        <%= f.label '商品画像　　　　　　' %>
        <%= f.attachment_field :image %>
      </div>
      <div class="form-group">
        <%= f.label '商品名　　　　　　　'%>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label '商品説明　　　　　　' %>
        <%= f.text_area :introduction %>
      </div>
      <div class="form-group">
        <%= f.label 'ジャンル　　　　　　' %>
        <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "--選択してください--") %>
      </div>
      <div class="form-group">
        <%= f.label '税抜き価格　　　　　' %>
        <%= f.text_field :price %>円
      </div>
      <div class="form-group text-center">
        <%= f.submit '　　新規登録　　', class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
  </div>