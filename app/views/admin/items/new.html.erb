<h1>商品新規登録</h1>

  <%= form_with model: @item, url:'/admin/items', local:true do |f| %>
  <div class="form-group">
    <%= f.label '商品画像' %>
    <%= f.attachment_field :image %>
  </div>

  <div class="form-group">
    <%= f.label '商品名'%>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label '商品説明' %>
    <%= f.text_area :introduction %>
  </div>

  <div class="form-group">
    <%= f.label 'ジャンル' %>
    <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "--選択してください--") %>
  </div>

  <div class="form-group">
    <%= f.label '税抜き価格' %>
    <%= f.text_field :price %>円
  </div>

  <div class="form-group">
    <%= f.submit '新規登録' %>
  </div>
  <% end %>
