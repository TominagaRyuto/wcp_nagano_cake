<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました
  <% @item.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h1 class="bg-light w-25 text-center m-5">商品編集</h1>
<div class="container">
  <div class="row justify-content-center">
    <%= form_with model:@item, url:"/admin/items/#{@item.id}", local:true do |f| %>
      <div class="form-group">
        <label for="image">商品画像　　　　　</label>
        <%= f.attachment_field :image, id:'image' %>
      </div>
      <div class="form-group">
        <label for="name">商品名　　　　　　</label>
        <%= f.text_field :name, id:'name' %>
      </div>
      <div class="form-group">
        <label for="introduction">商品説明　　　　　</label>
        <%= f.text_area :introduction, id:'introduction' %>
      </div>
      <div class="form-group">
        <label for="genre">ジャンル　　　　　</label>
        <%= f.collection_select(:genre_id, @genre, :id, :name) %>
      </div>
      <div class="form-group">
        <label for="price">税抜き価格　　　　</label>
        <%= f.text_field :price, id:'price' %>円
      </div>
      <div class="text-center">
        <%= f.submit "　　変更を保存　　", class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>