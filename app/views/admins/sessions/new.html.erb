<h1>管理者ログイン</h1>

<%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group">
    <%= f.label "パスワード" %>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <div class="form-group">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

